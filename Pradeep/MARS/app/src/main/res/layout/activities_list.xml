<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_shelf_1"
    android:weightSum="1">

    <!--<TextView android:id="@+id/activities_list_title"-->
              <!--android:layout_width="match_parent"-->
              <!--android:layout_height="wrap_content"-->
              <!--android:gravity="center_horizontal"-->
              <!--android:fontFamily="sans-serif"-->
              <!--android:textStyle="bold"-->
              <!--android:text="@string/activities_list_title_string"/>-->

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:text="Pick Image"
        android:id="@+id/button_imgPick"
        android:onClick="launchImgPicker"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/profile"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Update Profile"
        android:textColor="#F00"
        android:id="@+id/textView2"
        android:layout_below="@+id/button_imgPick"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:text="AR Screen"
        android:id="@+id/button_ar"
        android:onClick="launchARScreen"
        android:layout_margin="110dp"
        android:background="@drawable/button_bg_selector"
        android:layout_below="@+id/button_imgPick"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AR Mode"
        android:textColor="#F00"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/button_ar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp" />

</RelativeLayout>

