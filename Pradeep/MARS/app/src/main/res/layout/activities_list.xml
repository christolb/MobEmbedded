<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@drawable/bg_shelf_1"
    android:weightSum="1">

    <TextView android:id="@+id/activities_list_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:fontFamily="sans-serif"
              android:textStyle="bold"
              android:text="@string/activities_list_title_string"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AR Screen"
            android:id="@+id/button_ar"
            android:onClick="launchARScreen"
            android:background="@drawable/button_bg_selector"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Pick Image"
            android:id="@+id/button_imgPick"
            android:onClick="launchImgPicker"
            android:background="@drawable/imgpick_bg_selector" />

</LinearLayout>

